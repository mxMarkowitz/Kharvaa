function wordCount(target, counterId, softLimit, hardLimit, warningClass, errorClass){
	if ($('#' + counterId).length === 0){
		var formGroup = target.parents('.form-group');
		formGroup.prepend('<div id="' + counterId + '" class="letterCount"></div>');
	}
	target.on('keydown', function(e){
		if(e.currentTarget.value.length === hardLimit){
			e.stopImmediatePropagation();
			e.preventDefault();  
		}
	});

	target.on('keyup', function(e){
		var counter = $('#' + counterId);
		var currentVal = e.currentTarget.value.length;
		counter.html( currentVal + '/' + hardLimit);
		if (currentVal >= softLimit){
			counter.addClass(warningClass);
			counter.removeClass(errorClass);
		} else if (currentVal === hardLimit){
			counter.addClass(errorClass);
			counter.removeClass(warningClass);
		}
	})
}

wordCount($('#id_name'), 'id-Name-LetterCount', 10, 20, 'letterCount-warning', 'letterCount-error');
